@import "reset"

$card_width = 280px

.body
    padding 15px

.contents
    min-height 800px
    float left
    width 48%
    font-size 85%

#reference
    min-height 800px
    float right
    width $card_width

.footer
    clear both

.unit_ref
    display inline
    font-size 85%
    padding 2px 6px
    background-color #333
    color #ddd
    border 1px solid #888
    border-radius 4px
    font-weight bold


.card_thumbnail
    display inline-block
    padding 0 10px 10px 0

.card
    font-size 75%
    max-width $card_width
    background-color #f0f0f0
    font-family Sans-Serif
    color #333
    padding 5px 0
    border-radius 6px

    h1
        text-transform capitalize
        font-size 110%
        display block
        width $card_width - 10px
        background-color #bbb
        color #f0f0f0
        padding 5px
        margin 5px 0

    h2
        font-size 120%
        text-transform capitalize
        text-align center
        width $card_width - 20px
        margin 10px 5px

    blockquote
        display block
        width $card_width - 10px
        text-align right
        font-family Serif
        font-style italic
        color #333
        padding 5px

    li
        display inline-block
        padding 4px 2px
        margin 3px
        background-color #fff
        color #666
        border 1px solid #888
        border-radius 4px

