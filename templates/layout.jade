extends html

block append head
  script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
  script(src="https://togetherjs.com/togetherjs-min.js")



block append body
  //ACTUAL CONTENTS HERE
  div.header
    h1: a(href=root+'index.html') Notodeim
    ul.menu
      li: button(onclick="TogetherJS(this); return false;") Start TogetherJS
      li: +link('synopsis')
      li: +link('howto')
      li: +link('units')
    div.clear_both

  div.body
    div.contents
      block content
    div#reference
    div.clear_both

  div.footer
    p Copyright Diesix gattr

  script.
    $(document).ready(function() {

      $('#reference').hide();

      $('.unit_ref').mouseenter(function(event) {
        var url = "./#{root}units/" + event.target.textContent + ".html";
        $('#reference').load(url).show();

      }).mouseleave(function(event) {
        $('#reference').hide();
      });
    });
